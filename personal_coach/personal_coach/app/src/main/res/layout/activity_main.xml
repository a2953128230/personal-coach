<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:openDrawer="start">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/body">

        <Button
            android:id="@+id/menu_button"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/menu" />

        <Button
            android:id="@+id/btn_situp"
            android:onClick="click_situps"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="320dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_pushup"
            android:onClick="click_pushups"
            android:layout_width="62dp"
            android:layout_height="65dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="250dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_GluteBridge"
            android:onClick="click_gluteBridges"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="390dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_squat"
            android:onClick="click_squats"
            android:layout_width="wrap_content"
            android:layout_height="111dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="480dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_ProneExtension"
            android:onClick="click_button5"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="230dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_situpst"
            android:layout_width="146dp"
            android:layout_height="83dp"
            android:layout_marginTop="430dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_squatst"
            android:layout_width="146dp"
            android:layout_height="94dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="600dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_pushupst"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_marginTop="250dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_gluteBridgest"
            android:layout_width="131dp"
            android:layout_height="66dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="460dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_proextension"
            android:layout_width="161dp"
            android:layout_height="78dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="160dp"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/label"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="16dp"
            android:text="Personal Coach"
            android:textSize="20sp"
            android:textColor="#F5DEB3"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="0.5"
            android:shadowDy="0.5"
            />

        <TextView
            android:id="@+id/pushup_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="300dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/glutebridge_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="490dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/situp_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="470dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/squat_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="643dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/proneextension_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="233dp"
            android:layout_marginTop="150dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/refresh_button"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="670dp"
            android:background="@drawable/rotation" />


    </RelativeLayout>

    <!--    側邊攔    -->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/layer_bg">

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/user" />

        <Button
            android:id="@+id/mainmenuButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="110dp"
            style="@style/ButtonStyle"
            android:text="首頁" />

        <Button
            android:id="@+id/RecordButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="160dp"
            style="@style/ButtonStyle"
            android:text="紀錄" />

        <Button
            android:id="@+id/BMIbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="210dp"
            style="@style/ButtonStyle"
            android:text="BMI計算" />


    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
